    <script>
        // Função para copiar links
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("Link copiado: " + text);
            });
        }

        // Quiz Interativo
        function selectOption(option, questionId, optionIndex) {
            const quizCard = option.closest('.quiz-card');
            
            // Remove seleção anterior
            quizCard.querySelectorAll('.quiz-option').forEach(opt => {
                opt.classList.remove('selected', 'correct', 'incorrect');
            });
            
            // Esconde todos os feedbacks
            quizCard.querySelectorAll('.quiz-feedback').forEach(fb => {
                fb.style.display = 'none';
            });
            
            // Marca como selecionado
            option.classList.add('selected');
            
            // Verifica resposta correta (sempre a segunda opção neste exemplo)
            const isCorrect = (optionIndex === 1);
            
            if (isCorrect) {
                option.classList.add('correct');
                document.getElementById(`feedback${questionId}-correct`).style.display = 'block';
                quizCard.querySelector('.quiz-progress-bar').style.width = '100%';
                quizCard.querySelector('.quiz-progress-bar').style.background = '#00aa00';
            } else {
                option.classList.add('incorrect');
                document.getElementById(`feedback${questionId}-incorrect`).style.display = 'block';
                quizCard.querySelector('.quiz-progress-bar').style.width = '50%';
                quizCard.querySelector('.quiz-progress-bar').style.background = '#ff0000';
            }
        }
    </script>
